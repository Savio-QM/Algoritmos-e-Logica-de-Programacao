Algoritmo "idades"
Var
// Seção de Declarações das variáveis 
   pessoa1, pessoa2 : caractere
   idade1, idade2 : inteiro
   media: real

Inicio
      // Pedir nome e idade
      escreval("Dados da primeira pessoa:")
      escreva("Nome: ")
      leia(pessoa1)
      escreva("Idade: ")
      leia(idade1)
      
      escreval("Dados da segunda pessoa:")
      escreva("Nome: ")
      leia(pessoa2)
      escreva("Idade: ")
      leia(idade2)
      
      // Calcule a média
      media <- (idade1 + idade2) / 2.0
      
      escreva("A idade média de ", pessoa1, " e de ", pessoa2, " é de", media:3:2, " anos")


Fimalgoritmo
